.profile-container
    .image-profile-container{style:"background-image: url(#{url_for(current_user.cover)})"}
        =image_tag url_for(current_user.avatar)
        =link_to "Editar Perfil", edit_user_path(current_user), class: 'btn-facebook-primary no-decoration'
    .info-profile-container.radius-10
        %h2.font-bold.dark-gray-text= current_user.username
        %p.font-light.light-gray-text= current_user.bio