.main-container.large-padding
  .product-card 
    .product-container
      .images-product
        = cl_image_tag @product.cover.key if @product.cover.attached?
      .info-product
        %h1.no-margin.title.font-bold.dark-gray-text
          = @product.name
        %h3.no-margin.font-bold.title.dark-gray-text
          = @product.price
        .user-container.margin-top
          .user-image-profile
            =user_avatar(@product.user)
          .user-post-info
            =link_to @product.user.username, @product.user, class:'font-bold dark-gray-text no-decoration light-gray-text'
        %p.normal-font.light-gray-text 
          = @product.description
        .flex.flex-center-vertical.margin-top 
          - @product.categories.each do |category|
            =link_to category.name, category, class:'no-decoration pill', style:"background-color:#{category.color}"
        .buy-button-content.margin-top.actions-admin
          =link_to 'Comprar', @product, class:'btn-facebook-primary no-decoration'
    .comments-product

